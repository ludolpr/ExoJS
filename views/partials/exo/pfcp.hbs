<section class="mh100 mt250">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-7 text-md-start">
            <h1 class="mb-4 display-3 fw-bold lh-sm">Chi-fou-mi</h1>
            <h2>Bonne chance 😀👏</h2>
            
            <!-- Choix papier ciseau caillou -->
            <button
              id="papier"
              onclick="lancerJeu(this.id)"
              type="button"
              class="btn btn-warning btn-lg rounded-pill">
              <i class="far fa-hand-paper"></i> Papier
            </button>
            <button
              type="button"
              id="ciseau"
              onclick="lancerJeu(this.id)"
              class="btn btn-success btn-lg rounded-pill">
              <i class="far fa-hand-scissors"></i> Ciseau
            </button>
            <button
              type="button" id="caillou" onclick="lancerJeu(this.id)"class="btn btn-danger btn-lg rounded-pill">
              <i class="far fa-hand-rock"></i> Caillou
            </button>
            <button
              type="button"
              id="caillou"
              onclick="lancerJeu(this.id)"
              class="btn btn-dark btn-lg rounded-pill">
              <i class="fa-brands fa-bitbucket"></i> Puits
            </button>

            <!-- Résultat -->
            <div class="result">
              <p class="font-weight-normal text-black-50" id="mainOrdinateur"></p>
              <h2 id="resultat"></h2>
            </div>
            <div>
              <h3 id="scores"></h3>
              <h3 id="scores2"></h3>
            </div>
          </div>
          <div class="col-md-5 text-center">
            <img class="img-fluid" src="robot.png" width="350" alt="" />
          </div>
          <buttontype="button"
          
          onclick="reloadPage()"
          class="btn btn-warning btn-lg rounded-pill">
          <i class="fa-solid fa-arrow-right-from-bracket"> reset le score !</i> 
          </button>
  
        </div>
      </div>
    </section>

